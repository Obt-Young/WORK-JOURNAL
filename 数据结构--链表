#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>

struct linklist{
        struct linklist * next;
        int value;
};

int init(int a[],int a_size,struct linklist **output)
{
        int i;
        struct linklist * current;
        struct linklist * head;

        head = (struct linklist *)malloc(sizeof(struct linklist));
        current=head;

        for(i=0;i<a_size;i++)
        {
                        current->value=a[i];
                        current->next=malloc(sizeof(struct linklist));
                        current=current->next;
        }
        current->next=NULL;


        *output = head;

        sleep(1);

        return 0;
}

int main(int argc,char** argv)
{
        int a[]={1,2,3,4,5,6,7,6,5,4,3,2,1};

        struct linklist *head;

        init(a,sizeof(a)/sizeof(int),&head);

        printf("%d",head->value);

        sleep(1);

        return 0;
}
